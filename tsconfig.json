{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": [
			"ES2015"
		],
		"allowJs": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"removeComments": true,
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts"
	]
}